<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">#D8A3A3</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@drawable/windowimageandcolor</item>
    </style>
    <style name="Widget.App.Spinner" parent="@style/Widget.AppCompat.Spinner">
        <item name="overlapAnchor">true</item>
        <item name="android:background">@drawable/drop_arrow</item>
    </style>

    <style name="SpinnerStyle">
        <item name="android:layout_marginStart">@dimen/spinner_big_margin</item>
        <item name="android:layout_marginTop">@dimen/spinner_small_margin</item>
        <item name="android:layout_marginEnd">@dimen/spinner_big_margin</item>
        <item name="android:elevation">@dimen/elevation</item>
    </style>

    <style name="GreenMode" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/green1</item>
        <item name="colorAccent">@color/green2</item>
        <item name="backgroundColor">#1DE9B6</item>
        <item name="colorButtonNormal">@color/green3</item>
    </style>
    <style name="PinkMode" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryDark">@color/pink2</item>
        <item name="colorAccent">#E8A9A9</item>
        <item name="backgroundColor">#FDCACA</item>
        <item name="colorButtonNormal"> @color/pink3</item>
    </style>

    <style name="YellowMode" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FFEB3B</item>
        <item name="colorPrimaryDark">#9C7606</item>
        <item name="colorAccent">#EADB5B</item>
        <item name="backgroundColor">#785F13</item>
        <item name="colorButtonNormal">@color/yellow</item>
    </style>

    <style name="DarkMode" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#9DAAB6</item>
        <item name="colorPrimaryDark">#A8A8B6</item>
        <item name="colorAccent">#7A8291</item>
        <item name="backgroundColor">#B2B9C3</item>
        <item name="colorButtonNormal">#F2FFFFFF</item>
    </style>





</resources>