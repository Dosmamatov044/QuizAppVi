<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="390dp"
    android:layout_height="wrap_content"

     android:layout_marginStart="3dp"
    android:layout_marginTop="90dp"
    android:background="@drawable/backgroundforlisth"
     android:elevation="6dp"
    android:translationZ="4dp"
    android:id="@+id/rel"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:text="Category:"
        android:textSize="20sp"
           android:id="@+id/category"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="15dp"
        android:text="@string/mixed"
        android:textSize="20sp"
         android:id="@+id/mixed"

        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="110dp"
        android:layout_marginTop="50dp"
        android:text="8_10"

        android:textSize="12dp"
        android:id="@+id/clock"

        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:text="Correct_answers:"

        android:textSize="12dp"
           android:id="@+id/correct_answers"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="20dp"
        android:layout_marginTop="75dp"
        android:text="Difficulty:"
        android:id="@+id/difficulty"
        android:textSize="12dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="67dp"
        android:layout_marginTop="75dp"

        android:textSize="12dp"
        android:text="Easy"
        android:id="@+id/easy"

        />






<ImageButton
    android:layout_width="30dp"
    android:layout_height="20dp"
    android:layout_marginTop="10dp"
android:layout_marginStart="350dp"
android:src="@drawable/ic_vector"


    android:id="@+id/menu_dots"

   android:background="@color/white"
    />

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"



        android:clickable="true"
        android:format12Hour="hh:mm:ss"
        android:format24Hour="dd:MMM: yyyy: hh:ss"
        android:text="TextClock"
        android:textColor="@color/ic_down_background"
        android:textSize="10dp"

        android:layout_marginTop="74dp"
        android:layout_marginLeft="270dp"

        android:focusable="true" />





</RelativeLayout>