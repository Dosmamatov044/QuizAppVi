<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.Quiztion.QuizActivity"


    >


    <ImageView
        android:layout_width="30dp"
        android:layout_height="54dp"
        android:layout_marginStart="16dp"

           android:id="@+id/Vimage"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"


        android:contentDescription="TODO" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/geography"
        android:fontFamily="sans-serif-black"
        android:textSize="22sp"
        android:textAlignment="center"
        android:id="@+id/text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="30dp"

        android:visibility="invisible"
        />


    <SeekBar
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"

        android:progress="5"
        android:progressTint="@color/purple"
        android:thumb="@drawable/seekbarnotthumb"
        android:max="10"
      android:id="@+id/progressBar"
        app:layout_constraintTop_toTopOf="parent"
        android:thumbTint="#9C27B0"
        android:visibility="invisible"
        />











    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:text="0/0"
   android:textSize="10dp"
   android:id="@+id/progress"

        android:textColor="@color/black"
 android:layout_marginTop="110dp"
    android:layout_marginLeft="190dp"

        android:visibility="invisible"
        />







    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
android:background="@drawable/skipbutton"
        android:layout_marginTop="500dp"
        android:text="Skip"
        android:layout_marginLeft="160dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
  android:id="@+id/skip"
android:visibility="invisible"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:id="@+id/recyclerQuizActivity"
android:layout_marginTop="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

android:visibility="invisible"

        />
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="false"
        app:lottie_rawRes="@raw/quizzlot"

        android:visibility="gone"
        />


</androidx.constraintlayout.widget.ConstraintLayout>